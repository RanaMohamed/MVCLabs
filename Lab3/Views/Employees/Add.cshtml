@model Employee
@{
    ViewBag.Title = "Add Employee";
}

<h2 class="my-3">Add Employee</h2>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(e => e.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Email, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(e => e.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Password, null, new { @class = "text-danger" })
    </div>
    

    <div class="form-group">
        <label>Salary</label>
        @Html.TextBoxFor(e => e.Salary, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Salary, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Address</label>
        @Html.TextAreaFor(e => e.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Address, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Gender</label>
        @Html.EnumDropDownListFor(e => e.Gender, "Select Gender" , new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Gender, null, new { @class = "text-danger" })
    </div>


    <input type="submit" value="Submit" class="btn btn-primary" />
</form>