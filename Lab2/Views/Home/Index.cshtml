@model Employee

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .input-validation-error {
            border-color: red;
        }
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div> 
        <form method="post">
            <label>Name</label>
            @Html.TextBoxFor(e => e.Name) @Html.ValidationMessageFor(e => e.Name)
            <br />
            <br />

            <label>Email</label>
            @Html.TextBoxFor(e => e.Email) @Html.ValidationMessageFor(e => e.Email)
            <br />
            <br />

            <label>Password</label>
            @Html.PasswordFor(e => e.Password) @Html.ValidationMessageFor(e => e.Password)
            <br />
            <br />

            <label>Salary</label>
            @Html.TextBoxFor(e => e.Salary) @Html.ValidationMessageFor(e => e.Salary)
            <br />
            <br />

            <label>Address</label>
            @Html.TextAreaFor(e => e.Address) @Html.ValidationMessageFor(e => e.Address)
            <br />
            <br />

            <label>Gender</label>
            @Html.EnumDropDownListFor(e => e.Gender) @Html.ValidationMessageFor(e => e.Gender)
            <br />
            <br />

            @*<label>Male</label>@Html.RadioButtonFor(e => e.Gender, Gender.Male)
            <label>Female</label>@Html.RadioButtonFor(e => e.Gender, Gender.Female)
            @Html.ValidationMessageFor(e => e.Gender)
            <br />
            <br />*@


            <input type="submit" value="Submit" />
        </form>
    </div>
</body>
</html>
